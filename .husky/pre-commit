#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit hooks..."
echo "================================"

# Run linting
echo "📝 Running linter..."
npm run lint
LINT_EXIT_CODE=$?

if [ $LINT_EXIT_CODE -ne 0 ]; then
  echo "❌ Linting failed! Please fix errors before committing."
  echo "💡 Tip: Run 'npm run lint' to see all errors"
  exit $LINT_EXIT_CODE
fi

# For now, skip tests but show a warning
echo "⚠️  Note: Tests are temporarily disabled in pre-commit hook"
echo "   Once linting issues are fixed, tests will be re-enabled"

echo "✅ Pre-commit checks passed!"
echo "================================"
