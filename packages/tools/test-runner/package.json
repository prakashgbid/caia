{
  "name": "@caia/test-runner",
  "version": "0.1.0",
  "description": "Parallel test runner leveraging CAIA utilities for maximum performance",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "caia-test": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "npx eslint src --ext .ts",
    "lint:fix": "npx eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "caia",
    "test",
    "runner",
    "parallel",
    "coverage",
    "jest",
    "vitest",
    "testing"
  ],
  "author": "CAIA Team",
  "license": "MIT",
  "dependencies": {
    "@caia/work-divider": "^0.1.0",
    "@caia/resource-calculator": "^0.1.0",
    "@caia/coverage-aggregator": "^0.1.0",
    "@caia/metric-collector": "^0.1.0",
    "@caia/progress-tracker": "^0.1.0",
    "@caia/task-scheduler": "^0.1.0",
    "@caia/dependency-analyzer": "^0.1.0",
    "@caia/report-generator": "^0.1.0",
    "@caia/pattern-recognizer": "^0.1.0",
    "@caia/cc-orchestrator": "^0.1.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "glob": "^10.3.0",
    "ora": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/caia-ai/caia.git",
    "directory": "packages/tools/test-runner"
  }
}