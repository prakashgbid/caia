{
  "name": "@caia/root",
  "version": "1.0.0",
  "description": "CAIA - Chief AI Agent: The Orchestrator of Orchestrators",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/agents/*",
    "packages/engines/*",
    "packages/utils/*",
    "packages/integrations/*",
    "packages/modules/*",
    "packages/tools/*",
    "apps/*",
    "examples/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:all": "npx lerna run build",
    "test:all": "npx lerna run test",
    "test:coverage": "npx lerna run test:coverage",
    "clean": "lerna clean -y && rm -rf node_modules",
    "publish:all": "./scripts/npm-publish.sh",
    "publish:changed": "lerna publish --since HEAD~1",
    "publish:dry-run": "./scripts/npm-publish.sh --dry-run",
    "publish:force": "./scripts/npm-publish.sh --force",
    "publish:prepare": "./scripts/prepare-npm-publish.sh",
    "publish:core": "PACKAGES='packages/core' ./scripts/npm-publish.sh",
    "publish:agents": "PACKAGES='packages/agents/frontend-engineer packages/agents/backend-engineer packages/agents/solution-architect packages/agents/product-owner packages/agents/jira-connect' ./scripts/npm-publish.sh",
    "publish:engines": "PACKAGES='packages/engines/workflow packages/engines/reasoning packages/engines/learning packages/engines/planning packages/engines/code-generation' ./scripts/npm-publish.sh",
    "publish:utils": "PACKAGES='packages/utils/cc-orchestrator' ./scripts/npm-publish.sh",
    "create:agent": "node scripts/create-component.js agent",
    "create:engine": "node scripts/create-component.js engine",
    "create:util": "node scripts/create-component.js util",
    "create:module": "node scripts/create-component.js module",
    "dev": "lerna run dev --parallel",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "version:major": "lerna version major",
    "version:minor": "lerna version minor",
    "version:patch": "lerna version patch",
    "graph": "nx graph",
    "affected:test": "nx affected:test",
    "affected:build": "nx affected:build",
    "docs:generate": "typedoc",
    "docs:build": "typedoc"
  },
  "devDependencies": {
    "@size-limit/file": "^11.2.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.14.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lerna": "^8.0.0",
    "nx": "^17.0.0",
    "prettier": "^3.1.0",
    "size-limit": "^11.2.0",
    "ts-jest": "^29.1.1",
    "turbo": "^2.5.6",
    "typescript": "^5.3.0"
  },
  "optionalDependencies": {
    "@nx/nx-darwin-arm64": "17.0.0",
    "@nx/nx-darwin-x64": "17.0.0",
    "@nx/nx-linux-arm64-gnu": "17.0.0",
    "@nx/nx-linux-arm64-musl": "17.0.0",
    "@nx/nx-linux-x64-gnu": "17.0.0",
    "@nx/nx-linux-x64-musl": "17.0.0",
    "@nx/nx-win32-x64-msvc": "17.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/caia-ai/caia.git"
  },
  "keywords": [
    "ai",
    "agents",
    "orchestration",
    "automation",
    "caia",
    "chief-ai-agent",
    "monorepo",
    "typescript"
  ],
  "author": "CAIA AI",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/caia-ai/caia/issues"
  },
  "homepage": "https://caia.ai",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
